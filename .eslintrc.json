{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "overrides": [
    {
      "files": [
        "*.jsx"
      ]
    }
  ],
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true
  },
  "globals": {
    "__CONFIG__": false
  },
  "extends": [
    "exp",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react",
    "babel",
    "jsx-a11y",
    "import"
  ]
}